{
	"name": "@m-social/eslint-config-next",
	"version": "1.0.0",
	"description": "Shared ESLint config for Next.js used by M-Social projects",
	"keywords": [
		"m-social",
		"eslint",
		"eslint-config",
		"next",
		"next.js"
	],
	"author": {
		"name": "M-Social",
		"url": "https://msocialproduction.com"
	},
	"contributors": [
		{
			"name": "Artem Pitikin",
			"email": "a.pitikin@msocialproduction.com"
		}
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/m-social/frontend-configs.git",
		"directory": "configs/eslint/next"
	},
	"license": "MIT",
	"files": [
		"dist",
		"src"
	],
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"exports": {
		".": {
			"@m-social/frontend-configs": "./src/index.ts",
			"types": {
				"import": "./dist/index.d.ts",
				"require": "./dist/index.d.cts"
			},
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "tsdown"
	},
	"dependencies": {
		"@m-social/eslint-config-react": "workspace:*",
		"@next/eslint-plugin-next": "^16.0.0",
		"globals": "catalog:eslint"
	},
	"peerDependencies": {
		"eslint": "catalog:eslint"
	},
	"publishConfig": {
		"access": "public"
	}
}
